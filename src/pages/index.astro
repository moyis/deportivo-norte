---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Asociate from '../components/Asociate.astro';
import Historia from '../components/Historia.astro';
import FAQ from '../components/FAQ.astro';
import Sponsors from '../components/Sponsors.astro';
import Footer from '../components/Footer.astro';

import '../styles/global.css';

const seoTitle = "Club Deportivo Norte | Fútbol en Mar del Plata - Asociate";
const seoDescription = "Club Deportivo Norte, institución de fútbol fundada en 1937 en Mar del Plata, Argentina. Asociate y sé parte de nuestra historia. Bicampeón de la Liga Marplatense 1987-88.";
---

<Layout title={seoTitle} description={seoDescription}>
  <Navbar />
  
  <main id="main-content">
    <Hero />
    <Asociate />
    <Historia />
    <FAQ />
    <Sponsors />
  </main>
  
  <Footer />
</Layout>
